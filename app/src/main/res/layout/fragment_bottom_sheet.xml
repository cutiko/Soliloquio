<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="cl.cutiko.soliloquio.views.main.BottomSheetFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <info.abdolahi.CircularMusicProgressBar
            android:id="@+id/songArt"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/album_art"
            app:border_color="@android:color/white"
            app:border_width="2dp"
            app:centercircle_diammterer="1"
            app:progress_color="@color/colorAccent"
            app:progress_startAngle="0" />

        <LinearLayout
            android:id="@+id/controlsWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/songArt"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/prevBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_skip_previous_white_24dp"
                android:theme="@style/DarkerButton" />

            <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_play_arrow_white_24dp"
                android:theme="@style/DarkerButton" />

            <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_skip_next_white_24dp"
                android:theme="@style/DarkerButton" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/controlsWrapper"
            android:layout_toEndOf="@id/songArt"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>
